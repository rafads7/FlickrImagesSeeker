<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextInputLayout -->
    <style name="ItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">@dimen/container_margin</item>
    </style>

    <style name="DetailTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="DetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/text_color_selector</item>
    </style>

</resources>