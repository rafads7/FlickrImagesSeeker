<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/item_list_fragment">

    <fragment
        android:id="@+id/item_list_fragment"
        android:name="com.example.flickrimagesseeker.ImagesListFragment"
        android:label="ImagesListFragment"
        tools:layout="@layout/fragment_images_list">
        <action
            android:id="@+id/show_image_detail"
            app:destination="@id/image_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/image_detail_fragment"
        android:name="com.example.flickrimagesseeker.ImageDetailFragment"
        android:label="ImageDetail"
        tools:layout="@layout/fragment_image_detail">
        <argument
            android:name="imageId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>